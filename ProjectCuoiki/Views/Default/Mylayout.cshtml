

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Responsive Bootstrap4 Shop Template, Created by Imran Hossain from https://imransdesign.com/">
    <title>Fruitkha</title>

    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="~/Uploads/img/favicon.png">
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
    <!-- fontawesome -->
    <link rel="stylesheet" href="~/Content/css/all.min.css">
    <!-- bootstrap -->
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css">
    <!-- jquery ui -->
    <link href="~/Content/css/jquery-ui.css" rel="stylesheet" />
    <!-- owl carousel -->
    <link rel="stylesheet" href="~/Content/css/owl.carousel.css">
    <!-- magnific popup -->
    <link rel="stylesheet" href="~/Content/css/magnific-popup.css">
    <!-- animate css -->
    <link rel="stylesheet" href="~/Content/css/animate.css">
    <!-- mean menu css -->
    <link rel="stylesheet" href="~/Content/css/meanmenu.min.css">
    <!-- main style -->
    <link rel="stylesheet" href="~/Content/css/main.css">
    <!-- responsive -->
    <link rel="stylesheet" href="~/Content/css/responsive.css">


</head>
<body>
    <!--PreLoader-->
    <div class="loader">
        <div class="loader-inner">
            <div class="circle"></div>
        </div>
    </div>
    <!--PreLoader Ends-->
    <!-- header -->
    <div class="top-header-area mb-5" id="sticker">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-sm-12 text-center">
                    <div class="main-menu-wrap">
                        <!-- logo -->
                        <div class="site-logo">
                            <a href="@Url.Action("Index", "Default")">
                                <img src="~/Uploads/img/logo.png" alt="">
                            </a>
                        </div>
                        <!-- logo -->
                        <!-- menu start -->
                        <nav class="main-menu">
                            <ul>
                                <li><a href="@Url.Action("Index", "Default")">Trang chủ</a></li>
                                @{Html.RenderAction("getMenu", "Default");}

                                <li style="float: right">
                                    <div class="header-icons">
                                        <div>
                                            <a href="">@HttpContext.Current.User.Identity.Name</a>
                                            <ul class="sub-menu">
                                                <li><a href="@Url.Action("Index", "OrderHistory", new { name =  @HttpContext.Current.User.Identity.Name})">Order History</a></li>
                                                @using (Html.BeginForm("Logout", "Login", FormMethod.Post))
                                                {
                                                    <li>
                                                        <a href="javascript:;" onclick="document.forms[0].submit();">Logout</a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </li>

                                <li>
                                    <form action="/tim-kiem" method="get">
                                        <div class="input-group">
                                            <div class="form-outline">
                                                <input type="text" id="txtKeyword" class="form-control" name="keyword" placeholder="Tim kiem" }">
                                            </div>
                                            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
                                        </div>
                                    </form>
                                </li>

                                <li>
                                    <div class="header-icons">
                                        <a class="shopping-cart" href="~/gio-hang"><i class="fas fa-shopping-cart"></i></a>
                                    </div>
                                </li>

                            </ul>
                        </nav>
                        <!-- menu end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end header -->
    <!-- Search Area -->
    <div class="search-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <span class="close-btn"><i class="fas fa-window-close"></i></span>
                    <div class="search-bar">
                        <div class="search-bar-tablecell">
                            <h3>Search For:</h3>
                            <form action="/tim-kiem" method="get">
                                <input type="text" id="txtKeyword" name="keyword" placeholder="Tim kiem" }">
                                <button type="submit">Search <i class="fas fa-search"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end Search Area -->

    @RenderBody()

    <!-- footer -->
    @{ Html.RenderAction("getFooter", "Default");}
    <!-- end footer -->
    <!-- copyright -->
    <div class="copyright">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <p>
                        Copyrights &copy; 2019 - <a href="https://imransdesign.com/">Imran Hossain</a>,  All Rights Reserved.<br>
                        Distributed By - <a href="https://themewagon.com/">Themewagon</a>
                    </p>
                </div>
                <div class="col-lg-6 text-right col-md-12">
                    <div class="social-icons">
                        <ul>
                            <li><a href="#" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
                            <li><a href="#" target="_blank"><i class="fab fa-twitter"></i></a></li>
                            <li><a href="#" target="_blank"><i class="fab fa-instagram"></i></a></li>
                            <li><a href="#" target="_blank"><i class="fab fa-linkedin"></i></a></li>
                            <li><a href="#" target="_blank"><i class="fab fa-dribbble"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end copyright -->
</body>
<script src="~/Scripts/js/jquery-1.11.3.min.js"></script>
<!-- bootstrap -->
<script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
<!-- jquery ui -->
<script src="~/Scripts/js/jquery-ui.js"></script>
<!-- count down -->
<script src="~/Scripts/js/jquery.countdown.js"></script>
<!-- isotope -->
<script src="~/Scripts/js/jquery.isotope-3.0.6.min.js"></script>
<!-- waypoints -->
<script src="~/Scripts/js/waypoints.js"></script>
<!-- owl carousel -->
<script src="~/Scripts/js/owl.carousel.min.js"></script>
<!-- magnific popup -->
<script src="~/Scripts/js/jquery.magnific-popup.min.js"></script>
<!-- mean menu -->
<script src="~/Scripts/js/jquery.meanmenu.min.js"></script>
<!-- sticker js -->
<script src="~/Scripts/js/sticker.js"></script>
<!-- main js -->
<script src="~/Scripts/js/main.js"></script>
<!-- base controller js -->
<script src="~/Scripts/js/baseController.js"></script>
</html>
