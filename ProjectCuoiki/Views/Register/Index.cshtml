@model ProjectCuoiki.Models.userAccount

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Register</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Uploads/img/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor_login/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor_login/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor_login/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor_login/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/css_login/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css_login/main.css">
    <!--===============================================================================================-->
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Uploads/img/img-01.png" alt="IMG">
                </div>

                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <span class="login100-form-title">
                        Member Register
                    </span>

                    <div class="wrap-input100 validate-input">
                        @Html.TextBoxFor(m => m.userName, new { @class = "input100", @placeholder = "Username" })
                        <div>
                            @Html.ValidationMessageFor(m => m.userName, "", new { @class = "error" })
                        </div>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        @Html.PasswordFor(m => m.passWord, new { @class = "input100", @placeholder = "Password" })
                        <div>
                            @Html.ValidationMessageFor(m => m.passWord, "", new { @class = "error" })
                        </div>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="RePassword is required">
                        @Html.PasswordFor(m => m.repassWord, new { @class = "input100", @placeholder = "RePassword" })
                        <div>
                            @Html.ValidationMessageFor(m => m.repassWord, "", new { @class = "error" })
                        </div>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div id="dvMessage" style="display:none" class="alert alert-danger">
                        <strong>Error!</strong>
                        <span>@ViewBag.Message</span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Register
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Username / Password?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="@Url.Action("Index", "Login")">
                            Login Account
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>




    <script src="~/Content/vendor_login/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Content/vendor_login/bootstrap/js/popper.js"></script>
    <script src="~/Content/vendor_login/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/vendor_login/select2/select2.min.js"></script>
    <script src="~/Content/vendor_login/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <script src="~/Scripts/js/mainFormLogin.js"></script>

    @if (@ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                $("#dvMessage").show();
            });
        </script>
    }

</body>
</html>

